<% provide(:title, "Edit listing") %>
<h1>Edit your listing</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%=link_to "Delete", item_path(@item.id), :method => :delete, :confirm => "Are you sure ?"%> 

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>