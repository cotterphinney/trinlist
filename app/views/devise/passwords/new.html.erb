<div id="sign_in_wrapper" class="container">

	<h2>Forgot your password?</h2>

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class=> "form-signin" }) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

	  <div><%= f.submit "Send me reset password instructions", :id => "submit_button", :class => "btn btn-lg btn-primary btn-block" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>