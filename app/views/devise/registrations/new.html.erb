<div id="sign_in_wrapper" class="container">

	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=> "form-signin"}) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %> (must be a valid trincoll.edu address)<br />
	  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password, :class => "form-control" %></div>

	  <div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation, :class => "form-control" %></div>

	  <div><%= f.submit "Sign up", :id => "submit_button", :class => "btn btn-lg btn-primary btn-block" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>