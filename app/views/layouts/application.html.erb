<!DOCTYPE html>
<html>
<head>
  <title>Trinlist</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="navbar" class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button id="navbar_button" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Trinlist', root_path, :class => "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="nav_link active"><a href="#">All</a></li>
        <li class="nav_link"><a href="#about">Furniture</a></li>
        <li class="nav_link"><a href="#contact">Electronics</a></li>
        <li class="nav_link"><a href="#about">Clothes</a></li>
        <li class="nav_link"><a href="#contact">Books</a></li>
        <li class="nav_link"><a href="#about">Misc.</a></li>
        <li class="nav_link"><a href="#about">Free</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li id="nav_add_item"><%= link_to 'Add Listing', new_item_path %></li>
        <% if current_user.present? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">My Listings</a></li>
            <li><%= link_to 'Account Settings', edit_user_registration_path %></li>
            <li>            
              <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
              <%# user is not logged in, show signup and login links %>
            </li>
          </ul>
        </li>
        <% else %>
          <li class="nav_link"><%= link_to 'Sign In', new_user_session_path %></li>
          <li class="nav_link"><%= link_to 'Register', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">

  <p class="notice"><%= notice %></p>
  <%= yield %>
</div>

</body>
</html>
